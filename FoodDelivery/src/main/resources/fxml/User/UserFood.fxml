<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<ScrollPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.fooddelivery.Controller.FoodDetailController">
    <content>
        <VBox prefWidth="1200.0" prefHeight="800.0">
            <children>
                <AnchorPane prefHeight="700.0" prefWidth="1200.0">
                    <children>

                        <!-- Ảnh món ăn -->
                        <ImageView fx:id="imgFood" fitHeight="270.0" fitWidth="306.0"
                                   layoutX="394.0" layoutY="72.0" pickOnBounds="true" preserveRatio="true" />

                        <!-- Thông tin món ăn -->
                        <GridPane layoutX="758.0" layoutY="113.0" prefHeight="205.0" prefWidth="300.0">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="100.0"/>
                                <ColumnConstraints prefWidth="200.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints prefHeight="30.0"/>
                                <RowConstraints prefHeight="30.0"/>
                                <RowConstraints prefHeight="30.0"/>
                                <RowConstraints prefHeight="30.0"/>
                                <RowConstraints prefHeight="30.0"/>
                            </rowConstraints>
                            <children>
                                <Text text="Tên món ăn" GridPane.rowIndex="0" />
                                <Text fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                                <Text text="Tên quán" GridPane.rowIndex="1" />
                                <Text fx:id="txtStore" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                                <Text text="Địa chỉ" GridPane.rowIndex="2" />
                                <Text fx:id="txtAddress" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                                <Text text="Tình trạng" GridPane.rowIndex="3" />
                                <Text fx:id="txtStatus" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                                <Text text="Giá tiền" GridPane.rowIndex="4" />
                                <Text fx:id="txtPrice" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                            </children>
                        </GridPane>

                        <!-- Nút thêm giỏ hàng và số lượng -->
                        <Text layoutX="758.0" layoutY="375.0" text="Số lượng" />
                        <TextField fx:id="txtQuantity" layoutX="820.0" layoutY="358.0" prefHeight="25.0" prefWidth="55.0" text="1" />
                        <Button layoutX="887.0" layoutY="358.0" text="-" />
                        <Button layoutX="908.0" layoutY="358.0" text="+" />
                        <Button fx:id="btnAddCart" layoutX="961.0" layoutY="358.0" text="Thêm vào giỏ hàng" />

                        <!-- Mô tả -->
                        <Text layoutX="485.0" layoutY="472.0" text="Mô tả món ăn:" />
                        <TextArea fx:id="txtDescription" layoutX="485.0" layoutY="483.0" prefHeight="110.0" prefWidth="425.0" editable="false"/>

                        <!-- Đánh giá -->
                        <Text layoutX="485.0" layoutY="638.0" text="Đánh giá" />

                        <!-- Sidebar -->
                        <fx:include source="SideBar.fxml" />

                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </content>
</ScrollPane>
