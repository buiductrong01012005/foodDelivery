<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootFoodInfoPane" prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #fffdf6;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.fooddelivery.Controller.FoodInforController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
    </padding>
    <children>
        <Label fx:id="formTitleLabel" layoutX="30.0" layoutY="20.0" style="-fx-font-size: 20px; -fx-font-weight: bold;"
               text="Thông Tin Món Ăn">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </Label>

        <!-- Bỏ HBox chứa ảnh -->
        <!-- GridPane thông tin sẽ chiếm không gian chính -->
        <GridPane fx:id="infoGrid" layoutX="30.0" layoutY="70.0" hgap="10.0" vgap="12.0"
                  AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="70.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="120.0"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="450.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <!-- Tên Món Ăn -->
                <Label text="Tên món:" GridPane.halignment="RIGHT"/>
                <Label fx:id="foodNameLabel" text="[Chưa tải]" GridPane.columnIndex="1"/>
                <TextField fx:id="foodNameField" managed="false" visible="false" GridPane.columnIndex="1"/>

                <!-- Loại Món Ăn -->
                <Label text="Loại món:" GridPane.rowIndex="1" GridPane.halignment="RIGHT"/>
                <Label fx:id="categoryNameLabel" text="[Chưa tải]" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <ComboBox fx:id="categoryComboBox" prefWidth="450.0" managed="false" visible="false"
                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Giá Tiền -->
                <Label text="Giá (VNĐ):" GridPane.rowIndex="2" GridPane.halignment="RIGHT"/>
                <Label fx:id="priceLabel" text="[Chưa tải]" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextField fx:id="priceField" managed="false" visible="false" GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>

                <!-- Tình Trạng -->
                <Label text="Tình trạng:" GridPane.rowIndex="3" GridPane.halignment="RIGHT"/>
                <Label fx:id="statusLabel" text="[Chưa tải]" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <ComboBox fx:id="statusComboBox" prefWidth="450.0" managed="false" visible="false"
                          GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <!-- Mô Tả -->
                <Label text="Mô tả:" GridPane.rowIndex="4" GridPane.valignment="TOP" GridPane.halignment="RIGHT"/>
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="4" alignment="TOP_LEFT">
                    <Label fx:id="descriptionLabel" text="[Chưa tải]" wrapText="true" prefWidth="450.0"/>
                    <TextArea fx:id="descriptionArea" wrapText="true" prefRowCount="3" prefWidth="450.0"
                              managed="false" visible="false"/>
                </VBox>
            </children>
        </GridPane>


        <!-- Khu vực bảng đánh giá (Review) -->
        <!-- Điều chỉnh layoutY dựa trên kích thước của GridPane thông tin -->
        <VBox layoutX="30.0" layoutY="380.0" spacing="10.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="30.0"
              AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="380.0">
            <children>
                <Label text="Đánh giá món ăn:">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
                <TableView fx:id="reviewsTableView" prefHeight="150.0"
                           VBox.vgrow="ALWAYS"> <!-- Giảm chiều cao nếu cần -->
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID ĐG"/>
                        <TableColumn fx:id="userNameColumnReview" prefWidth="120.0" text="Người dùng"/>
                        <TableColumn fx:id="emailColumnReview" prefWidth="150.0" text="Email"/>
                        <TableColumn fx:id="phoneNumberColumnReview" prefWidth="100.0" text="SĐT"/>
                        <TableColumn fx:id="reviewColumn" prefWidth="250.0" text="Nội dung"/>
                    </columns>
                </TableView>
            </children>
        </VBox>

        <!-- Các nút hành động -->
        <HBox alignment="CENTER_RIGHT" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="30.0">
            <children>
                <Button fx:id="saveButton" onAction="#handleSaveOrAddItem" text="Lưu" managed="false" visible="false"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="100"/>
                <Button fx:id="addItemButton" onAction="#handleSaveOrAddItem" text="Thêm Món" managed="false"
                        visible="false"
                        style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="120"/>
                <Button fx:id="cancelButton" onAction="#handleCancelOrClose" text="Hủy" managed="false" visible="false"
                        style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-font-weight: bold;"
                        prefWidth="100"/>
                <Button fx:id="closeButton" onAction="#handleCancelOrClose" text="Đóng"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="100"/>
            </children>
        </HBox>
    </children>
</AnchorPane>