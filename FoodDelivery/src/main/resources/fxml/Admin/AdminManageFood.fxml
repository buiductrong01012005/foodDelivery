<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane fx:id="manageFoodPaneRoot"
            prefHeight="800.0"
            prefWidth="900.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.fooddelivery.Controller.AdminManageFoodController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <!-- Title -->
        <Label text="Quản Lý Món Ăn"
               layoutX="20.0" layoutY="20.0"
               AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
            <font><Font name="System Bold" size="20.0" /></font>
        </Label>

        <!-- Search and Add Food Controls -->
        <AnchorPane layoutX="20.0" layoutY="60.0"
                    AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="60.0" AnchorPane.rightAnchor="20.0">
            <children>
                <!-- Search elements -->
                <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.leftAnchor="0.0">
                    <children>
                        <Label text="Tìm kiếm:">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <TextField fx:id="searchFoodField"
                                   prefWidth="300.0"
                                   promptText="Nhập tên món ăn..."
                                   onAction="#onSearchFoodKeywordInput" />
                        <Button text="Tìm" onAction="#onSearchFoodKeywordInput" />
                    </children>
                </HBox>
                <!-- Add button -->
                <Button fx:id="addFoodButton"
                        mnemonicParsing="false"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                        text="+ Thêm món"
                        onAction="#onAddFoodButtonClick"
                        AnchorPane.rightAnchor="0.0">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Button>
            </children>
        </AnchorPane>


        <!-- Food Table -->
        <TableView fx:id="foodTableManage"
                   layoutX="20.0" layoutY="110.0"
                   AnchorPane.topAnchor="110.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="70.0">
            <columns>
                <TableColumn fx:id="foodIdColManage" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="foodNameColManage" prefWidth="350.0" text="Tên Món" />
                <TableColumn fx:id="foodCategoryColManage" prefWidth="150.0" text="Loại" />
                <TableColumn fx:id="foodPriceColManage" prefWidth="100.0" text="Giá" />
                <TableColumn fx:id="foodStatusColManage" prefWidth="179.0" text="Tình trạng" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            <placeholder><Label text="Không có dữ liệu món ăn." /></placeholder>
        </TableView>

        <!-- Action Buttons (Edit/Delete) -->
        <HBox spacing="10.0" alignment="CENTER_RIGHT"
              AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Button fx:id="editFoodButton"
                        mnemonicParsing="false"
                        onAction="#onEditFoodButtonClick"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                        text="Chỉnh sửa">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Button>
                <Button fx:id="deleteFoodButton"
                        mnemonicParsing="false"
                        onAction="#onDeleteFoodButtonClick"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"
                        text="Xoá">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Button>
            </children>
        </HBox>
    </children>
</AnchorPane>